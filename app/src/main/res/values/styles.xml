<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.CardAdapter" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowExitTransition">@transition/card_exit</item>
        <item name="android:windowReenterTransition">@transition/card_reenter</item>
    </style>

    <style name="AppTheme.CardDetail" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowEnterTransition">@transition/detail_enter</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
